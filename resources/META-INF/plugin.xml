<idea-plugin>
    <id>com.magicbytes.blaze</id>
    <name>Blaze - Swift Inspections</name>
    <vendor email="magic.bytes.soft@gmail.com" url="https://www.facebook.com/magycBytes/">MagicBytesSoft</vendor>

    <description><![CDATA[
    This Plugin offers multiple inspections for Swift. It includes inspection as:
    <li>Sorting Enum cases alphabetically </li>
    <li>Unused methods/Empty methods/Methods calling only supper methods</li>
    <li>Unused parameters</li>
    ]]></description>

    <version>0.2.2</version>


    <idea-version since-build="163"/>

